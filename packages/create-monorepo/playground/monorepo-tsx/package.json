    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "esno": "^4.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.13.2",
    "rollup-plugin-dts": "^6.1.0",
    "typescript": "^5.4.3"
  }
